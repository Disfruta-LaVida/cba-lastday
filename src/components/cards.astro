---
const {name,topic,message,img} = Astro.props;
---

<div class ="flex flex-col items-center">
    <img src={img} class ="bg-[#f20044] w-full h-[252px]"/>
    <div class ="py-3 px-5">
      <div class ="font-bold text-lg text-center">{name}</div>
      <div class ="font-thin text-xs flex-auto text-center">
        {topic}
      </div>
    </div>
</div>