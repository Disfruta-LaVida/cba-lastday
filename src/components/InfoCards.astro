---
const { employee_id, name, motto } = Astro.props;
---

<div class="flex flex-col w-[283px]">
    <img class="bg-[#f20044] h-[252px] object-cover" src={`/img/${employee_id}.png`}/>
    <div class="py-3 px-5">
      <div class="font-bold text-lg text-center bg-gradient-to-r from-pink-500 to-[#f7bd03] text-transparent bg-clip-text">{name}</div>
      <div class="font-thin text-xs flex-auto text-center">
        {motto}
      </div>
    </div>
  </div>
